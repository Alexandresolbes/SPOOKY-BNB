<h1><%= @listing.title %></h1>

<ul>
  <li><%= @listing.description %></li>
  <li><%= @listing.address %></li>
  <li><%= @listing.price_per_night %></li>
  <li><%= @listing.max_guests %></li>
  <li><%= @listing.user.first_name %></li>
  <li><%= @listing.user.email %></li>
</ul>

<%= link_to 'Back', listings_path %>

<% if current_user == @listing.user %>
<%= link_to 'Delete', listing_path(@listing), data: { turbo_method: :delete, turbo_confirm: 'Sure ?' } %>

<% end %>
