<h1><%= @listing.title %></h1>

<ul>
  <% @listing.photos.each do |photo| %>
    <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <li><%= @listing.description %></li>
  <li><%= @listing.address %></li>
  <li><%= @listing.price_per_night %></li>
  <li><%= @listing.max_guests %></li>
  <li><%= @listing.user.first_name %></li>
  <li><%= @listing.user.email %></li>
</ul>

<%= link_to 'Back', listings_path %>

<% if current_user == @listing.user %>
<%= link_to 'Delete', listing_path(@listing), data: { turbo_method: :delete, turbo_confirm: 'Sure ?' } %>
<% end %>
<%= link_to 'Update Listing', edit_listing_path(@listing) %>
<%= link_to 'Book Listing', new_listing_booking_path(@listing), class: "btn btn-primary" %>

<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
